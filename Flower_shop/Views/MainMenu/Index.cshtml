@using Flower_shop.Models
@model List<ProductViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<script src="~/js/yandexMap.js" type="text/javascript"></script>

<div class="main-page">
    <div class="first-block">
        <div class="main-text">
            Подарки для самых любимых!
        </div>
        <div class="text">
            Порадуйте своих близких
        </div>
        <div class="btn-first-block">
            <a href="/Gallery/Products"> Перейти </a>
        </div>
    </div>
    <div class="main-image" onclick="location.href='@Url.Action("Products", "Gallery")'">
        <img src="~/images/flower9.jpg" />
    </div>
</div>
<div class="block-products">
    <div class="name-of-block-products">
        Цветы и подарки
    </div>
    <div class="products">
            @foreach (ProductViewModel product in Model)
            {
                <div class="product" onclick="location.href='@Url.Action("SingleProduct", "Gallery", new {productUrl = product.ImageUrl, productName = product.Name, productPrice = product.Price})'">
                    <div class="product-image">
                        <img src=@product.ImageUrl />
                    </div>
                    <div class="text">
                        <div class="name">
                            @product.Name
                        </div>
                        <div class="price">
                            @product.Price
                        </div>
                    </div>
                </div>
            }
        </div>
    <div class="father-btn-block">
        <div class="btn-second-block">
            <a href="/Gallery/Products"> Перейти </a>
        </div>
    </div>
</div>
<div class="main-page">
    <div class="main-image" onclick="location.href='@Url.Action("Products", "Gallery")'">
        <img src="~/images/flower15.jpg" />
    </div>
    <div class="second-block">
        <div class="main-text">
            Букеты любой сложности
        </div>
        <div class="text">
            Мы делаем с любовью
        </div>
        <div class="btn-third-block">
            <a href="/Gallery/Products"> Перейти </a>
        </div>
    </div>
</div>
<div class="main-page" id="block-with-map">
    <div class="third-block">
        <div class="main-text">
            Мы рядом!
        </div>
        <div class="text">
            Маршрут построен
        </div>
        <div class="btn-fourth-block">
            <a href="/Gallery/Products"> Перейти </a>
        </div>
    </div>
    <div class="main-map">
        <div class="map" id="map"></div>
    </div>
</div>



