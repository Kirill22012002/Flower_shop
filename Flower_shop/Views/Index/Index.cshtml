@using Flower_shop.Models
@model List<ProductViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/index_get-started.css?v=1" />
<link rel="stylesheet" href="~/css/index_present.css?v=1" />
<link rel="stylesheet" href="~/css/index_ballon.css?v=1" />
<link rel="stylesheet" href="~/css/index_delivery.css?v=1" />
<link rel="stylesheet" href="~/css/index_block-text.css?v=1" />
<link rel="stylesheet" href="~/css/index_products.css?v=1" />



<section class="get-started">
    <div class="get-started__container">
        <div class="get-started__contant">
            <div class="get-started__block-text block-text">
                <h1 class="block-text__title block-text__title_blue">
                    Подарки для самых <span>любимых!</span>
                </h1>
                <div class="block-text__text">
                    Порадуйте своих близких
                </div>
                <a href="/Gallery/Products" class="block-text__button button">Перейти</a>
            </div>
        </div>
        <div class="get-started__image">
            <img class="flower_pc" src="~/img/Get-started/flowers.png" alt="Цветы для PC">
            <img class="flower_mobile" src="~/img/Get-started/flowers.png" alt="Цветы для MOBILE">
        </div>
    </div>
</section>
<section class="present">
    <div class="present__container">
        <div class="present__image">
            <img class="present_pc" src="~/img/Presents/presents.png" alt="Подарок для PC">
            <img class="present_mobile" src="~/img/Presents/presents-mobile.png" alt="Подарок для MOBILE">
        </div>
        <div class="present__contant">
            <div class="present__block-text block-text">
                <h2 class="block-text__title">
                    <span>Подарки</span> на любую сумму!
                </h2>
                <div class="block-text__text">
                    Порадуйте своих близких
                </div>
                <a href="/Gallery/Products" class="block-text__button button">Перейти</a>
            </div>
        </div>
    </div>
</section>
<section class="product">
    <div class="product__container">
        @foreach (ProductViewModel product in Model)
        {
            <div class="product__contant" onclick="location.href='@Url.Action("SingleProduct", "Gallery", product)'">
                <div class="product__image">
                    <img src=@product.Img alt="Продукт" />
                </div>
                <div class="product__block-text">
                    <div class="text-product">
                        @product.Name
                    </div>
                    <div class="price-product">
                        @product.Price
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section class="balloon">
    <div class="balloon__container">
        <div class="balloon__contant">
            <div class="balloon__block-text block-text">
                <h2 class="block-text__title block-text__title_blue">
                    Счастливая <span>семья!</span>
                </h2>
                <div class="block-text__text">
                    Порадуйте своих близких
                </div>
                <a href="/Gallery/Products" class="block-text__button button">Перейти</a>
            </div>
        </div>
        <div class="balloon__image">
            <img class="balloon_pc" src="~/img/Family/balloons.png" alt="Шарики для PC">
            <img class="balloon_mobile" src="~/img/Family/balloons-mobile.png" alt="Шарики для MOBILE">
        </div>
    </div>
</section>
<section class="delivery">
    <div class="delivery__container">
        <div class="delivery__image">
            <img class="delivery_pc" src="~/img/Delivery/car.png" alt="Машина для PC">
            <img class="delivery_mobile" src="~/img/Delivery/car-mobile.png" alt="Машина для MOBILE">
        </div>
        <div class="delivery__contant">
            <div class="delivery__block-text block-text">
                <h2 class="block-text__title">
                    <span>Бесплатная</span> доставка по городу Лепель
                </h2>
                <div class="block-text__text">
                    +375291089024 <br />
                    Режим работы:<br />
                    Пн-Сб - 09:00-18:00<br />
                    Вс - 09:00-15:00<br />
                </div>
                <a href="" class="block-text__button button">Заказать</a>
            </div>
        </div>
    </div>
</section>


<script src="~/js/yandexMap.js" type="text/javascript"></script>