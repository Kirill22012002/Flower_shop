@model List<UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/admin_platform.css" />
<link rel="stylesheet" href="~/css/admin_getallusers.css" />


<section class="platform">
    <div class="platform__container">
        <table>
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Имя </th>
                    <th> Фамилия </th>
                    <th> Email </th>
                    <th> Права на сайте </th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserViewModel user in Model)
                {
                    <tr>
                        <td>
                            @user.Id
                        </td>
                        <td>
                            @user.FirstName
                        </td>
                        <td>
                            @user.LastName
                        </td>
                        <td>
                            @user.Email
                        </td>
                        @if (user.Role == SiteRole.User)
                        {
                            <td>
                                Обычный пользователь
                            </td>
                        }
                        else if (user.Role == SiteRole.Admin)
                        {
                            <td>
                                Администратор сайта
                            </td>
                        }
                        else if (user.Role == SiteRole.Developer)
                        {
                            <td>
                                Разработчик сайта
                            </td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>