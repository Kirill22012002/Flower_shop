@using Flower_shop.Models
@model TypeProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/forms.css?v=1" />
<link rel="stylesheet" href="~/css/admin_edition.css?v=1" />

<section class="edition">
    <div class="edition__container">
        <div class="block">
            <div class="come-back-action">
                <a href="/AdminPlatform/Platform">НАЗАД</a>
            </div>
            <div class="name">
                Добавить тип продукта
            </div>
            <div class="form-field">
                <form method="post">
                    <div class="input">
                        @Html.TextBoxFor(x => x.Name, new {@class="input-field", placeholder="Название"})
                    </div>
                    <div class="button-submit">
                        <input type="submit" value="ДОБАВИТЬ" />
                    </div>
                </form>
            </div>
        </div>
        <div class="block">
            <div class="name">
                Удалить тип продукта
            </div>
            @foreach (TypeProductViewModel typeProduct in Model.TypeProducts)
            {
                <div class="name-type">
                    @typeProduct.Name
                </div>
                <form action="/AdminPlatform/TypeProductDelete" method="post" class="remove-block">
                    <div class="product-remove">
                        <input name="typeId" type="hidden" value="@typeProduct.Id" />
                        <input type="submit" value="Удалить" />
                    </div>
                </form>
            }
        </div>
    </div>
</section>